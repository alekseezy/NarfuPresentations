<?xml version="1.0" encoding="utf-8" ?>
<Shell
    x:Class="NarfuPresentations.Presentation.MAUI.Shells.MobileShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:pages="clr-namespace:NarfuPresentations.Presentation.MAUI.Pages">
    <TabBar>
        <Tab Title="Меропрития" Icon="events_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:EventsPage}" />
        </Tab>
        <Tab Title="Настройки" Icon="settings_icon.png">
            <ShellContent ContentTemplate="{DataTemplate pages:SettingsPage}" />
        </Tab>
    </TabBar>
</Shell>